{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Message !</h1>

    <ul>
    {% for msg in messages %}
       {% if msg['tag'] is defined %}
            <li class="color-info">{{ msg['tag'] }}</li>
        {% else %}
            <li>{{ msg[0] }}</li>
        {% endif %}    {% endfor %}
    </ul>

    <div class="btn-command">
        <a class="btn btn-primary" href="{{ path('home')}}">Accueil</a>
        <a class="btn btn-primary" href="{{ path('persons_list') }}">Liste des Persons</a>
    </div>
</div>


{% endblock %}
