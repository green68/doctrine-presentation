{% extends 'base.html.twig' %}

{% block title %}Détail Produit{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Détail produit id:{{ product.getId }} ✅</h1>

        {% if lazy is defined %}
            lazily load
        {% else %}
            NON lazily load
        {% endif %}
        <ul>
            <li>
                <label>Nom </label>
                {{ product.getName }}
            </li>
            <li>
                <label>Catégorie</label>
                {{ category.getName }}
            </li>
        </ul>
        <div class="btn-command">
            <a class="btn btn-primary" href="{{ path('products_list')}}">Liste</a>
        </div>
    </div>
{% endblock %}
